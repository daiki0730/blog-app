= render 'shared/main-header'
%h5.mypage
  = link_to user_path(id: current_user.id),style: 'color: black;' do
    = current_user.nickname
#content.hfeed
  #content-inner
    #wrapper
      #main
        #main-inner
          - @posts.each do |post|
            %article#entry-26006613405060410.entry.hentry.js-entry-article.date-first.autopagerize_page_element.chars-200.words-100.mode-html.entry-odd{"data-keyword-campaign" => "", "data-publication-type" => "entry", "data-uuid" => "26006613405060410"}
              .entry-inner
                %header.entry-header
                  .date.entry-date.first
                    %a{:href => "https://daiki0730.hatenablog.com/archive/2019/08/25", :rel => "nofollow"}
                      %time{:datetime => "2019-08-25T08:28:39Z", :pubdate => "", :title => "2019-08-25T08:28:39Z"}
                        %span.date-year 2019
                        %span.hyphen -
                        %span.date-month 08
                        %span.hyphen -
                        %span.date-day 25
                  %h1.entry-title
                    = link_to "/posts/#{post.id}",class: "leave-delete-title",style: 'color: black;', method: :get do
                      = post.title
                  %a.entry-title-link.bookmark
                    = link_to "/posts/#{post.id}",class: "leave-delete-title", method: :get do
                      = image_tag post.image

          = paginate(@posts)

= render 'shared/main-footer'

