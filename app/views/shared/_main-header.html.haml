%nav.white{:role => "navigation"}
  .nav-wrapper.container
    %a#logo-container
      = link_to "BlogApp", root_path, class: 'brand-logo'
    %ul.right.hide-on-med-and-down
      %li
        - if user_signed_in?
          .user_nav.grid-6
            %a{:href => "/users/#{current_user.id}"} MyPage
          .user_nav.grid-6
            = link_to "Logout", destroy_user_session_path, method: :delete
        - else
          .grid-6
            = link_to "Login", new_user_session_path, class: 'Singup'
