= render 'shared/login-header'

#index-banner.parallax-container
  .section.no-pad-bot
    .container
      %br/
      %br/
      - if user_signed_in?
        %h1.header.center.teal-text.text-lighten-2
          = current_user.nickname
      - else
        %h1.header.center.teal-text.text-lighten-2 Welcome to BlogApp for SAO
      .row.center
        %h5.header.col.s12.light This app was created to consider the technical aspects of Sword Art Online (SAO).
      .row.center
        - if user_signed_in?
          .user_nav.grid-6
            = link_to "New Post", new_post_path, class: 'post'
      %br/
      %br/
  .parallax
    = image_tag 'image1.jpg',alt: 'Unsplashed'
#content.hfeed
  #content-inner
    #wrapper
      #main
        #main-inner
          - @posts.each do |post|
            %article#entry-26006613405060410.entry.hentry.js-entry-article.date-first.autopagerize_page_element.chars-200.words-100.mode-html.entry-odd{"data-keyword-campaign" => "", "data-publication-type" => "entry", "data-uuid" => "26006613405060410"}
              .entry-inner
                %header.entry-header
                  .date.entry-date.first
                    %a{:href => "https://daiki0730.hatenablog.com/archive/2019/08/25", :rel => "nofollow"}
                      %time{:datetime => "2019-08-25T08:28:39Z", :pubdate => "", :title => "2019-08-25T08:28:39Z"}
                        %span.date-year 2019
                        %span.hyphen -
                        %span.date-month 08
                        %span.hyphen -
                        %span.date-day 25
                  %h1.entry-title
                    = link_to "/posts/#{post.id}",class: "leave-delete-title",style: 'color: black;', method: :get do
                      = post.title
                  %a.entry-title-link.bookmark
                    = link_to "/posts/#{post.id}",class: "leave-delete-title", method: :get do
                      = image_tag post.image

= render 'shared/main-footer'
